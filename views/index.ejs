    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css"
        integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
            
    
</head>
<body>
        <nav>
            <h1 id="head" class="text-center">
                <div class="text-wrapper">
                    <p>TCG</p>
                </div>
            </h1>
            <ul>
                <li><a href="/game/pokemon">Pokemon Collection</a></li>
                <li><a href="/game/magic">Magic The Gathering Collection</a></li>
                <li><a href="/game/yugioh">YuGiOh Collection</a></li>
                <li><a href="/game/new">Add Card</a></li>

            </ul>
        </nav>
    <div class="greeting">
        <h2>Welcome to Matthew's TCG collection.</h2>
        <h4> This is a database project created to creates a portfolio to keep track of my trading card collection and its values.</h4>
        <% let totalValue = 0 %>
        <% for (let i= 0; i < game.length; i++){ %>
            <%totalValue = game[i].value + totalValue; %>
        <% } %>
        <ul>
            <h2><a href='/game/pokemon/'>Pokemon Collection</a></h2>
            <% let pokemonValue = 0 %>
            <% for (let i= 0; i < game.length; i++){ %>
                <% if (game[i].cardgame == "Pokemon" || game[i].cardgame == "pokemon"){%>
                    <%pokemonValue = game[i].value + pokemonValue; %>
                    <% } %>
            <% } %>
            <p class="value">$<%= pokemonValue%></p>
            <% let pokemonPercent = 0%>
            <% pokemonPercent = pokemonValue/totalValue %>
            <% pokemonPercent = pokemonPercent * 100 %>
            <p>Pokemon cards valued at <span>%<%=pokemonPercent.toFixed(2)%></span> Portfolio Total </p>
        </ul>
        <ul>
            <h2><a href='/game/magic/'>Magic Collection</a></h2>
            <% let magicValue = 0 %>
            <% for (let i= 0; i < game.length; i++){ %>
                <% if (game[i].cardgame == "Magic" || game[i].cardgame == "magic"|| game[i].cardgame == "Magic The Gathering"|| game[i].cardgame == "MTG"){%>
                    <%magicValue = game[i].value + magicValue; %>
                    <% } %>
            <% } %>
            <p class="value">$<%= magicValue%></p>
            <% let magicPercent = 0%>
            <% magicPercent = magicValue/totalValue %>
            <% magicPercent = magicPercent * 100 %>
            <p>Magic cards valued at <span>%<%=magicPercent.toFixed(2)%></span> Portfolio Total </p>
        </ul>
        <ul>
            <h2><a href='/game/yugioh/'>YuGiOh Collection</a></h2>
            <% let yugiohValue = 0 %>
                <% for (let i= 0; i < game.length; i++){ %>
                        <% if (game[i].cardgame == "YuGiOh" || game[i].cardgame == "yugioh" || game[i].cardgame == "Yugioh"){%>
                            <%yugiohValue = game[i].value + yugiohValue; %>
                        <% } %>
                <% } %>    
            <p class="value">$<%= yugiohValue%></p>
            <% let yugiohPercent = 0%>
            <% yugiohPercent = yugiohValue/totalValue %>
            <% yugiohPercent = yugiohPercent * 100 %>
            <p>Yugioh cards valued at <span>%<%=yugiohPercent.toFixed(2)%></span> Portfolio Total </p>
        </ul>


        <h2> Total Collection Value</h2>
        <p class="value">$<%= totalValue%></p>
        
        
            <a class="btn" href="/game/new">       
                <div class="button">
                    Add New Card
                  </div></a>
        
    </div>
    
</body>
