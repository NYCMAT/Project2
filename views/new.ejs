    <body>
        <nav>
            <ul class="nav nav-tabs">
                <li class="nav-item"><a class="nav-link" href="/game">Home</a></li>
                <li class="nav-item"><a class="nav-link" href="/game/pokemon">Pokemon Collection</a></li>
